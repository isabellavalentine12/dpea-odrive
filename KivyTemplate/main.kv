<MainScreen>:

    name: 'main'
    velocity_slider: velocity_slider
    velocity_slider_label: velocity_slider_label
    acceleration_slider: acceleration_slider
    acceleration_slider_label: acceleration_slider_label

    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: '>'
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": .9, "y":0}
        color: 0, 1, 0, 1
        on_press: root.switch_to_traj()

    DPEAButton:
        text: "<"
        font_size: self.width * .5
        size_hint: .1, 1
        pos_hint: {"x": 0, "y":0}
        color: 1, 0, 0, 1
        on_press: root.switch_to_gpio()

    DPEAButton:
        text: 'Motor Toggle'
        size: 100, 100
        x: root.width * .15
        y: root.height * .75
        color: 0, .5, .5, 1
        on_press: root.motor_toggle()

    Slider:
        id: velocity_slider
        size_hint: .1 ,1
        x: root.width * 0.3
        min: 0
        max: 10
        step: 0.01
        orientation: 'vertical'
        sensitivity: 'handle'
        on_value: root.velocity_function()

    Slider:
        id: acceleration_slider
        size_hint: .1 ,1
        x: root.width * 0.6
        min: 0
        max: 10
        step: 0.01
        orientation: 'vertical'
        sensitivity: 'handle'
        on_value: root.acceleration_function()

    Label:
        id: velocity_slider_label
        text: str(round(velocity_slider.value, 2))
        size_hint: None, None
        color: 0, .5, .5, 1
        center_x: root.width * 0.35
        center_y: root.height * 0.5
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        font_size: 50

    Label:
        id: acceleration_slider_label
        text: str(round(acceleration_slider.value, 2))
        size_hint: None, None
        color: 0, .5, .5, 1
        center_x: root.width * 0.65
        center_y: root.height * 0.5
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        font_size: 50

    Label:
        id: motor_velocity_label
        text: 'Motor Velocity'
        size_hint: None, None
        color: 0, .5, .5, 1
        center_x: root.width * 0.35
        center_y: root.height * 0.42
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        font_size: 20

    Label:
        id: acceleration_label
        text: 'Acceleration'
        size_hint: None, None
        color: 0, .5, .5, 1
        center_x: root.width * 0.65
        center_y: root.height * 0.42
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        font_size: 20

<TrajectoryScreen>:

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text:'back'
        size: 100, 100
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        color: 0, 1, 0, 1
        on_press: root.switch_screen()

<GPIOScreen>:

    name: 'main'
